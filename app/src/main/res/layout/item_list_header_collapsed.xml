<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ru.claus42.anothertodolistapp.presentation.ui.custom.views.ItemListHeaderLayout
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:id="@+id/list_header_collapsed">

    <TextView
        android:id="@+id/header_title"
        android:text="@string/my_to_do_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/CollapsedHeaderStyle"
        android:textSize="@dimen/item_list_header_collapsed_title_text_size" />

<!--    todo: accessibility-->
    <ImageButton
        android:id="@+id/show_hide_done_button"
        style="@style/CollapsedToolbarImageButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/visibility"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:importantForAccessibility="no" />

</ru.claus42.anothertodolistapp.presentation.ui.custom.views.ItemListHeaderLayout>
</layout>